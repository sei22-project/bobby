<div class="h-screen bg-dual-tone flex flex-col text-center items-center justify-center">

		<div>
        <%= link_to root_path do %>
				  <%= image_tag("master_fav_icon.png", class:' mx-auto pl-4 -mt-24') %>
        <% end %>
		</div>

		<div class="container mx-auto">

				<h2 class="font-heading font-bold text-2xl mt-8 mb-4">Sign Up</h2>
				<h3 class="text-gray-700 text-lg">Find some friends, play some games.</h3>
				<div class="mt-8 ">
						<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
						<%= render "devise/shared/error_messages", resource: resource, class:"pb-4" %>
            
						<div class="field mb-5 w-9/12 mx-auto max-w-md text-left">
								<%= f.label :email , class:'mb-3'%>
								<%= f.email_field :email, autofocus: true, autocomplete: "email" %>
						</div>

						<div class="field mb-5 w-9/12 mx-auto max-w-md text-left">
								<%= f.label :password, class:'mb-3' do%>
								Password
								<% if @minimum_password_length %>
								<span>(minimum:
										<%= @minimum_password_length %>)</span>
								<% end %>
								<% end %>
								<%= f.password_field :password, autocomplete: "new-password" %>
						</div>
						<div class="field mb-5 w-9/12 mx-auto max-w-md text-left">
								<%= f.label :password_confirmation, "Confirm Password", class:'text-left mb-3' %>
								<%= f.password_field :password_confirmation, autocomplete: "new-password" %>
						</div>
						<div class="actions my-6">
								<%= f.submit "Sign up", class:"btn btn-default " %>
						</div>
						<% end %>
						<div class="mt-4">
								<span>Got an account? </span>
								<%= render "devise/shared/links"%>
						</div>
				</div>
		</div>

</div>