


<div class="wrapper">

  <div class="section">
    <h1 class="section-title">Currently Hosting</h1>
    <% @hosting_games.each do |date, games| %>

      <% if games.count %>
        <h2 class="section-subtitle">
          <%= date %>, <span class="text-gray-700"><%= distance_of_time_in_words(Time.now, games[0].start) %>&nbsp;later</span>
        </h2>

        <div class="gallery justify-start">
          <% games.each do |game| %>
  
          <div class="card gallery-item gallery-item_short gallery-item_left_aligned">

            <div class="card-header">

              <h1 class="card-subtitle text-right">
                <%= game.category.game_type %>
              </h1>

              <h2 class="card-title">
                <%= game.title %>
              </h2>

            </div>

            <div class="card-body ml-0">
               <p><i class="fas fa-calendar-star text-black icon"></i>
                 <%= game.start.strftime("%H:%M %P") if game.start %> - <%=game.end.strftime("%H:%M %P") if game.end %>
               </p>
            </div>

            <div class="card-body ml-0">
              <p> <i class="fas fa-compass text-black icon"></i> <%= game.venue%> </p>
            </div>

            <div class="card-footer flex justify-between items-center">
              <%= button_to "Details", game_path(game.id),  class:'btn btn-default btn-sm', method:'get' %>
              <div>
               <a href="" class="text-xs"><%= game.pending_requests.count %>&nbsp;pending requests</a> <!-- link to details -->
               <p> <%= game.users.count %>/<%= pluralize( game.players_required, 'member' ) %></p>
              </div>
            </div>

          </div>
          <% end %>
        </div>
      <% end %>

    <% end %>
  </div> <!--end section -->

  <section>
    <h1 class="section-title">Participating</h1>

    <% @participating_games.each do |date, games| %>
  </section>

</div>
