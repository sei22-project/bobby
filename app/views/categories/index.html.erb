<!-- Search bar. Confirm whether search is for any field or for a specific field -->
<div class="container flex justify-between w-10/12 mx-auto mt-4">
	<p class="font-semibold">Sort By:</p>

	<%= form_with url: categories_sort_url, method: "get", class: "w-3/5" do |form| %>
		<%= form.text_field :date, class: 'w-full h-8 mb-2 bg-white sortdate-flatpick' %><br>

		<% categories_array = @categories.all.map { |category| [category.game_type, category.id] } %>
		<%= select(:category, :category_id, options_for_select(categories_array), {:include_blank => true}, {class: "w-full h-8 mb-4 bg-white"})%><br>

		<%= form.submit 'Find Game', class: "bg-black text-white" %>
	<% end %>
</div>

<div class="game-cards-container">
	<%= render 'categories/card' %>
</div>

<% content_for :js_scripts do %>
  <%= javascript_pack_tag 'category' %>
<%end %>